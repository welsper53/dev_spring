<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mblog1">
    <select id="deptList" parameterType="map" resultType="map">
        SELECT deptno, dname, loc, filename, fileurl FROM dept
        <where>
            <if test="deptno != null and deptno > 0">
                deptno = #{deptno}
            </if>
            <if test='gubun != null and "deptno".equals(gubun)'>
                AND deptno LIKE '%'||#{keyword}||'%'
            </if>
            <if test='gubun != null and "dname".equals(gubun)'>
                AND dname LIKE '%'||#{keyword}||'%'
            </if>
            <if test='gubun != null and "loc".equals(gubun)'>
                AND loc LIKE '%'||#{keyword}||'%'
            </if>
        </where>
    </select>

    <insert id="deptInsert" parameterType="com.example.mblog1.vo.DeptVO">
        INSERT INTO dept (deptno, dname, loc
        <if test="filename != null">
            , filename
        </if>
        <if test="fileurl != null">
            , fileurl
        </if>
        )
        VALUES (#{deptno}, #{dname}, #{loc}
        <if test="filename != null">
            , #{filename}
        </if>
        <if test="fileurl != null">
            , #{fileurl}
        </if>
        )
    </insert>

    <update id="deptUpdate" parameterType="com.example.mblog1.vo.DeptVO">
        UPDATE dept SET dname = #{dname}, loc = #{loc}
        <where>
            <if test="deptno != null and deptno > 0">
                deptno = #{deptno}
            </if>
        </where>
    </update>

    <delete id="deptDelete" parameterType="int">
        DELETE FROM dept
        <where>
            <if test="value != null and value > 0">
                AND deptno = #{deptno}
            </if>
        </where>
    </delete>
</mapper>